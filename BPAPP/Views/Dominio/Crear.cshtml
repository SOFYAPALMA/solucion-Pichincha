@model ProyectoWeb.Models.CrearTipoDominioDTO

@{
    ViewBag.Title = "Crear Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-4">
    <div class="col-sm-12">
        @using (Html.BeginForm())
        {
            <div class="card">
                <div class="card-header">
                    SUPERINTENDENCIA FINANCIERA DE COLOMBIA
