                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-12">
                            <input type="submit" value="Guardar" onclick="return ValidarCuotaManejo()" class="btn btn-primary btn-sm float-right" />
                            <div>
                                @Html.ActionLink("Volver", "Details", new { id = Model.idPropiedadesFormato })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        $('#CuotaManejo').change(function () {
            ValidarCuotaManejo();
        });

        $('#idServicioGratuito_1').change(function () {
            ValidarCuotaManejo();
        });

        $('#idServicioGratuito_2').change(function () {
            ValidarCuotaManejo();
        });

        $('#idServicioGratuito_3').change(function () {
            ValidarCuotaManejo();
        });
        $('#idObservacionesCuota').change(function () {
            ValidarCuotaManejo();
        });

        function ValidarCuotaManejo() {
            var retorno = true;
            LimpiarMensajeGeneral();
            var value = $("#CuotaManejo").val();
            var ObCuota = $("#idObservacionesCuota option:selected").val();

            console.log(value);
            console.log(ObCuota);

            var Sg1 = $("#idServicioGratuito_1 option:selected").val();
            var Sg2 = $("#idServicioGratuito_2 option:selected").val();
            var Sg3 = $("#idServicioGratuito_3 option:selected").val();


            if (ObCuota == '1351') {// Sí NO tienCuota de manejo"
                $('#CuotaManejo').val("");
                $('#CuotaManejo').prop("disabled", true);

                var isValidsg = true;

                //Sí No tiene "Cuota de manejo", Valores válidos para "Servicio Gratuito " 98 - No aplica

                if ((Sg1 == '78' && Sg2 == '78' && Sg3 == '78')) {
                    LimpiarMensajeGeneral();
                    retorno = true;
                }
                else {
                    isValidsg = false;
                }

                if (!isValidsg) {
                    retorno = false;
                    MensajeGeneral('Si NO TIENE cuota de manejo puede seleccionar en Servicio Gratuito: <br/>98- No aplica');
                }
            }

            else {//Si TIENE cuota de manejo
                $("#CuotaManejo").prop("disabled", false);
                if (value < 1) {
                    retorno = false;
                    MensajeGeneral('Agregue un valor a la cuota de manejo');
                }
                else {
                    if (true) {
                        //Si TIENE cuota de manejo puede seleccionar en Servicio Gratuito: 11 - Avance en cajero de la misma entidad 12 - Avance en oficina 13 - Consulta de saldo en cajero de la misma entidad 14 - Reposicion por deterior'
                        if ((Sg1 == '74' || Sg1 == '75' || Sg1 == '76' || Sg1 == '77') && (Sg2 == '74' || Sg2 == '75' || Sg2 == '76' || Sg2 == '77') && (Sg3 == '74' || Sg3 == '75' || Sg3 == '76' || Sg3 == '77')) {
                            retorno = true;
                        }
                        else {
                            retorno = false;
                            MensajeGeneral('Si TIENE cuota de manejo puede seleccionar en Servicio Gratuito: <br/>11 - Avance en cajero de la misma entidad <br/>12 - Avance en oficina <br/>13 - Consulta de saldo en cajero de la misma entidad <br/>14 - Reposicion por deterioro');
                        }
                    }
                }

            }

            return retorno;

        }

    </script>
}



