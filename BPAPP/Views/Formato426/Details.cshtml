@model ProyectoWeb.Models.Form426ConsultaEncabezado

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="card">
        <div class="card-header">
            Formulario 426 (Créditos)
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <div>
                            @Html.DisplayNameFor(model => model.Tipo)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.Tipo)
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div>
                            @Html.DisplayNameFor(model => model.Codigo)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.Codigo)
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.Nombre)
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div>
                            @Html.DisplayNameFor(model => model.TipoProductoCredito)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.DTipoProductoCredito)
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div>
                            @Html.DisplayNameFor(model => model.idCodigoCredito)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.CodigoCredito)
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div>
                            @Html.DisplayNameFor(model => model.AperturaDigital)
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.AperturaDigital)
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-sm-12 text-lg-right">
                    <input type="hidden" id="ID" name="ID" value="@Model.idPropiedadesFormato" />
                    <input type="button" class="btn btn-primary btn-sm" onclick="Desactivar()" value="Desactivar" />
                    @Html.ActionLink("Editar", "Update/" + Model.idPropiedadesFormato, Model.idPropiedadesFormato, new { @class = "btn btn-primary btn-sm" })

                </div>
                <div>
                    @Html.ActionLink("Volver", "List")
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 float-right">
                @Html.ActionLink("Nuevo Detalle", "CrearDetalle/" + Model.idPropiedadesFormato)

            </div>
        </div>
        <div class="card">
            <div class="card-header">
                Detalles
            </div>
            <div class="card-body">
                @Html.Partial("ListDetalles", (List<ProyectoWeb.Models.Form426ConsultaDetalle>)@ViewBag.ListaDetalles)
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        function Desactivar() {
            var data = {
                id: $('#ID').val(),
            };
            $.ajax({
                url: "/Formato426/DeleteEncabezado/" + $('#ID').val(),
                type: "POST",
                dataType: "json",
                data: JSON.stringify(data),
                success: function (mydata) {

                }
            });

            return false;
        }


    </script>
}
