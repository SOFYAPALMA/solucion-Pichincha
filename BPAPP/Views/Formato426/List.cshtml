@model IEnumerable<ProyectoWeb.Models.Form426ConsultaEncabezado>

@{
    ViewBag.Title = "Lista de formularios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
    <div class="col-sm-12">
        @using (Html.BeginForm())
        {
            <div class="card">
                <div class="card-header">
                    <h4>
                        Lista de registros formulario 426 (Créditos)
                    </h4>
                </div>
                <p>
                    @Html.ActionLink("Nuevo", "Crear")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idPropiedadesFormato)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DTipoProductoCredito)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DescripcionEstado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CodigoRegistro)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idPropiedadesFormato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DTipoProductoCredito)
                    </td>
                    <td>
                        @if (item.Estado == "1")
                        {
                            @Html.ActionLink(item.DescripcionEstado, "Error", "../ErroresSFC/Index", new { treg = 'E', idPropForm = item.idPropiedadesFormato, idRegDet = 0, form = 3 })
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.DescripcionEstado)
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoRegistro)

                    </td>
                    <td>
                        @Html.ActionLink("Ver", "Details", new { id = item.idPropiedadesFormato })
                    </td>


                </tr>
                    }

                </table>
            </div>
        }
    </div>
</div>
