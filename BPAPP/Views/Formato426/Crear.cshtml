

@{ ViewBag.Title = "BPAPP - FORMAMTO 426";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                SUPERINTENDENCIA FINANCIERA DE COLOMBIA
            </div>
            <br>
            <h3 style="text-align:center;">TARIFAS DE CRÉDITOS</h3>
            <h4 style="text-align:center;">FORMATO 426</h4>
            <h5 style="text-align:center;">CIRCULAR EXTERNA 006 DE 2023</h5>
            <br>
            <div class="card-body">
                <input id="txtIdUsuario" type="hidden" value="0" />
                <input id="txidPropiedadesFormato" type="hidden" value="0" />
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="txtTipo">Tipo Entidad</label>
                            <input class="form-control" id="txtTipo">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="txtCodigo">Código de Entidad</label>
                            <input class="form-control" id="txtCodigo">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="txtNombre">Nombre o Sigla de Entidad</label>
                            <input type="text" class="form-control" id="txtNombre">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="txtFecha">Fecha y Hora de Reporte</label>
                            <input type="datetime-local" class="form-control id="txtFecha" data-date-format="dd/mm/yyyy" name="fechainicio">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="txtidCodigoCredito">Código de Crédito</label>
                            <input type="text" class="form-control" id="txtidCodigoCredito">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="txtidAperturaDigital">Apertura Digital</label>
                            <select * from bpapp.fnTraeValoresDominio(2) class="form-control"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-sm-10">
                        <button class="btn btn-success btn-sm" type="button" id="btnGuardar" onclick="GuardarCambios()">Guardar Cambios</button>
                    </div>
                    <div class="col-sm-2 float-right">
                        <button class="btn btn-primary btn-sm float-right" type="button" id="btnCancelar" onclick="Editar()">Editar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        Tarifas de créditos
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-success btn-sm float-right" onclick="abrirPopUpForm(null)">
                            <i class="fa fa-plus" aria-hidden="true"></i> Agregar Detalle
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="tbdata" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Subcuentas</th>
                            <th>Característica del crédito</th>
                            <th>Costo</th>
                            <th>Tasa</th>
                            <th>Tipo de aseguradora</th>
                            <th>Código de aseguradora</th>
                            <th>Observaciones</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>

    </div>
</div>


<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Detalle Formato 426</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />
                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="cboSubcuenta">Subcuentas</label>
                                <select id="cboSubcuenta" class="form-control" name="combosubuenta"></select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtcaracteristicas">Característica del crédito</label>
                                <input type="text" class="form-control required" id="txtcaracteristicas" name="Caracteristcias">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtcosto">Costo</label>
                                <input type="text" class="form-control required" id="txtcostos" name="Costo">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txttasa">Tasa</label>
                                <input type="text" class="form-control required" id="txttasa" name="Tasa">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtTipoAseguradora">Tipo Aseguradora</label>
                                <input type="text" class="form-control required" id="txtTipoAseguradora" name="TipoAseguradora">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="textCodigo">Codigo Aseguradora</label>
                                <input type="text" class="form-control required" id="textCodigo" name="CodigoAseguradora">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtObservaciones">Observaciones</label>
                                <input type="text" class="form-control required" id="txtObservaciones" name="Observaciones">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="cboEstado">Estado</label>
                                <select id="cboEstado" class="form-control">
                                    <option value="1">Activo</option>
                                    <option value="0">No Activo</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="@Url.Content("~/Scripts/Controllers/Formato426.js")" type="text/javascript"></script>
}


