@model IEnumerable<ProyectoWeb.Models.Form424ConsultaEncabezado>

@{
    ViewBag.Title = "Lista de formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-4">
    <div class="col-sm-12">
        @using (Html.BeginForm())
        {
            <div class="card">
                <div class="card-header">
                    <h4>
                        Lista de registros formulario 424 (Depósitos)
                    </h4>
                </div>

                <p>
                    @Html.ActionLink("Nuevo", "Crear")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idPropiedadesFormato)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idNombreComercial)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoProductoDeposito)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.AperturaDigital)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.DescripcionEstado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CodigoRegistro)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.Usuario)
                            </th>*@
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idPropiedadesFormato)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreComercial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoProductoDeposito)
                            </td>
                            <td>
                                @if (item.Estado == "1")
                                {
                                    @Html.ActionLink(item.DescripcionEstado, "../ErroresSFC/Index", new { treg = 'E', idPropForm = item.idPropiedadesFormato, idRegDet = 0, form = 1 })
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.DescripcionEstado)
                                }

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CodigoRegistro)

                            </td>

                            <td>
                                @Html.ActionLink("Ver", "Details", new { id = item.idPropiedadesFormato, est = item.Estado })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        }
    </div>
</div>

